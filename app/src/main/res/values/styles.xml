<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AndroidDiploma" parent="">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="backgroundColor">@color/white_universal</item>
        <item name="android:background">?attr/background_color</item>
    </style>
    <style name="AndroidDiploma.ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="AndroidDiploma.AppBar">
        <item name="elevation">@dimen/size_zero</item>
    </style>

    <style name="FontYSDisplay">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="FontYSDisplay.Bold32">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontWeight">700</item>
    </style>
    <style name="FontYSDisplay.Medium22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">500</item>
    </style>
    <style name="FontYSDisplay.Medium16">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">500</item>
    </style>
    <style name="FontYSDisplay.Regular12">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">?attr/background_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
    </style>
</resources>
