<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AndroidDiploma" parent="">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="backgroundColor">@color/white_universal</item>
        <item name="android:background">?attr/background_color</item>
    </style>

    <style name="AndroidDiploma.ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="contentInsetStartWithNavigation">@dimen/size_zero</item>
        <item name="android:paddingEnd">@dimen/size_s</item>
        <item name="android:layout_height">64dp</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="android:titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/icon_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="AndroidDiploma.AppBar">
        <item name="elevation">@dimen/size_zero</item>
    </style>

    <style name="AndroidDiploma.EditTextStyle">
        <item name="android:background">@drawable/search_field</item>
        <item name="android:contextClickable">true</item>
        <item name="android:drawableEnd">@drawable/search_icon</item>
        <item name="android:drawablePadding">@dimen/size_s</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@dimen/size_s</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textColorHint">?attr/text_hint_color</item>
        <item name="android:textCursorDrawable">@drawable/cursor_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>

    </style>

    <style name="AndroidDiploma.EditTextStyleBoxed">
        <item name="boxBackgroundColor">@color/light_gray_3</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="endIconDrawable">@drawable/search_icon</item>
        <item name="endIconTint">@color/black_universal</item>
        <item name="endIconMode">custom</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="AndroidDiploma.EditTextStyleBoxed.Input">
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textColorHint">?attr/text_hint_color</item>
        <item name="android:background"/>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:inputType">text|textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FontYSDisplay">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="FontYSDisplay.Bold32">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="FontYSDisplay.Medium22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="FontYSDisplay.Medium16">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">500</item>
    </style>
    <style name="FontYSDisplay.Regular16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="FontYSDisplay.Regular12">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">?attr/background_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
    </style>
</resources>
